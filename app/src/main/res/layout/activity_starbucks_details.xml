<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/a_img_starbucks"
        android:layout_width="match_parent"
        android:layout_height="288dp"
        android:src="@drawable/logo" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="City: "/>
        <TextView
            android:id="@+id/a_starbucks_details_cityToChange"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="City to change "/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Street: "/>
        <TextView
            android:id="@+id/a_starbucks_details_streetToChange"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Street to change "/>

    </LinearLayout>

    <Button
        android:id="@+id/a_starbucks_details_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="stopActivityAndReturnResult"
        android:text="Close"
        app:layout_constraintBottom_toBottomOf="parent" />

</LinearLayout>

